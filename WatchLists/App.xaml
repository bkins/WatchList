<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WatchLists"
             xmlns:converters="clr-namespace:WatchLists.Converters"
             x:Class="WatchLists.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:ImageConverter x:Key="ImageConverter" />
            <x:Boolean x:Key="TrueBoolean">True</x:Boolean>
            <x:Boolean x:Key="FalseBoolean">False</x:Boolean>
        </ResourceDictionary>
    </Application.Resources>
</Application>
